<Window x:Class="TP2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TP2"
        mc:Ignorable="d"
        Title="MainWindow" Height="250" Width="250">
    <Grid Background="Black">
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition ></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>


        <Button Foreground="White" Margin="10,20,10,20" Click="Wall_Button" Background="#FF3A69C7">
            Wall
        </Button>


        <Button Foreground="White" Margin="10,20,10,20" Grid.Row="1" Click="Button_Click" Background="#FF3A69C7">
            Marketplace
        </Button>

        <Button Foreground="White" Margin="10,20,10,20" Grid.Row="1" Grid.Column="1" Click="Button_Click_1" Background="#FF3A69C7">
            Steam
        </Button>

        <Button Foreground="White" Margin="10,20,10,20" Grid.Row="0" Grid.Column="1" Click="Button_Click_2" Background="#FF3A69C7">
            La Source
        </Button>

    </Grid>


</Window>
